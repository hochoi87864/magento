                        <sort_order>0</sort_order>
                        <action>DtnOffice/adminhtml_DtnOffice</action>
                    </items>
                </children>
            </DtnOffice>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <DtnOffice>
                            <title>[Module] Module</title>
                            <sort_order>200</sort_order>
                        </DtnOffice>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <!---->
    <frontend>
        <routers>
            <DtnOffice>
                <use>standard</use>
                <args>
                    <module>trung_DtnOffice</module>
                    <frontName>dtn</frontName>
                </args>
            </DtnOffice>
        </routers>
        <layout>
            <updates>
                <DtnOffice>
                    <file>dtn.xml</file>
                </DtnOffice>
            </updates>
        </layout>
