<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <trung_DtnOffice>
            <version>0.3.0</version>
        </trung_DtnOffice>
    </modules>
    <admin>
        <routers>
             <DtnOffice>
                <use>admin</use>
                <args>
                    <module>trung_DtnOffice</module>
                    <frontName>admindtn</frontName>
                </args>
             </DtnOffice>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <trung_dtnoffice>
                    <file>admindtn.xml</file>
                </trung_dtnoffice>
            </updates>
        </layout>
        <menu>
            <DtnOffice module="trung_DtnOffice">
                <title>Dtn Office</title>
                <sort_order>100</sort_order>
                <children>
                    <menuitem>
                        <title>Departmenrt</title>
                        <sort_order>0</sort_order>
                        <action>admindtn/adminhtml_department/index</action>
                    </menuitem>
                    <menuitem1>
                        <title>Employee</title>
                        <sort_order>1</sort_order>
                        <action>admindtn/adminhtml_adminemployee/index</action>
                    </menuitem1>
                </children>
            </DtnOffice>
        </menu>
    </adminhtml>
    <frontend>
        <routers>
            <DtnOffice>
                <use>standard</use>
                <args>
                    <module>trung_DtnOffice</module>
                    <frontName>dtn</frontName>
                </args>
            </DtnOffice>
        </routers>
        <layout>
            <updates>
                <DtnOffice>
                    <file>dtn.xml</file>
                </DtnOffice>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <DtnOffice>
                <class>trung_DtnOffice_block</class>
            </DtnOffice>
        </blocks>
        <resources>
            <dtn_setup>
                <setup>
                    <module>trung_DtnOffice</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </dtn_setup>
        </resources>
        <models>
            <DtnOffice>
                <class>trung_DtnOffice_model</class>
                <resourceModel>DtnOffice_mysql4</resourceModel>
            </DtnOffice>
            <DtnOffice_mysql4>
                <class>trung_DtnOffice_model_mysql4</class>
                <entities>
                    <department>
                        <table>department</table>
                    </department>
                    <employee>
                        <table>employee</table>
                    </employee>
                </entities>
            </DtnOffice_mysql4>
        </models>
        <helpers>
            <trung_DtnOffice>
                <class>trung_DtnOffice_Helper</class>
            </trung_DtnOffice>
        </helpers>
    </global>
</config>