        <routers>
            <DtnOffice>
                <use>admin</use>
                <args>
                    <module>trung_DtnOffice</module>
                    <frontName>dtn</frontName>
                </args>
            </DtnOffice>
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <DtnOffice module="DtnOffice">
                <title>DtnOffice</title>
                <sort_order>71</sort_order>
