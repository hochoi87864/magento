                    <module>trung_DtnOffice</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </dtn_setup>
        </resources>
        <models>
            <DtnOffice>
                <class>trung_DtnOffice_model</class>
                <resourceModel>DtnOffice_mysql4</resourceModel>
            </DtnOffice>
