                <class>trung_DtnOffice_model_mysql4</class>
                <entities>
                    <department>
                        <table>department</table>
                    </department>
                    <employee>
                        <table>employee</table>
                    </employee>
                </entities>
            </DtnOffice_mysql4>
        </models>
        <!---->
        <helpers>
            <DtnOffice>
                <class>trung_DtnOffice_helper</class>
            </DtnOffice>
        </helpers>
